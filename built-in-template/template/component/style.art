:local(.wrapper) {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100vh;
  background-color: #282c34;
  color: aliceblue;

  h2 {
    margin-bottom: 0;
  }

  p {
    margin: 0;
  }

  .title {
    color: aqua;
  }

  .meta {
    color: yellow;
  }


  .description{
    font-size: 18px;
  }

  .list {
    >li {
      margin-top: 10px;
    }
  }
}
